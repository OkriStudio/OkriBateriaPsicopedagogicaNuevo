<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#FFFFFF"
    tools:context=".Baterias">

    <!-- Título -->
    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baterías"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#2C3E50"
        android:paddingBottom="16dp"/>

    <!-- Spinner para seleccionar el nivel de batería -->
    <Spinner
        android:id="@+id/spinnerNivelBateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="10dp"/>

    <!-- Texto que indica el nivel de batería -->
    <TextView
        android:id="@+id/textViewNivelBateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel de Batería"
        android:textSize="18sp"
        android:textColor="#34495E"
        android:layout_marginBottom="16dp"/>

    <!-- ScrollView para hacer scroll a la tabla -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tabla para mostrar los datos de los alumnos -->
        <TableLayout
            android:id="@+id/tableAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:background="#ECF0F1"
            android:padding="8dp"
            android:elevation="2dp">

            <!-- Fila de encabezado -->
            <TableRow
                android:background="#BDC3C7"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:padding="4dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RUT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:padding="4dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Curso"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:padding="4dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Puntuación"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:padding="4dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rendimiento"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:padding="4dp"/>
            </TableRow>

            <!-- Aquí se agregarán dinámicamente las filas de alumnos -->

        </TableLayout>
    </ScrollView>
</LinearLayout>
